# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/ai_finance_tracker
# Or use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ai_finance_tracker?retryWrites=true&w=majority

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_key_here_min_32_characters

# AI Configuration
AI_PROVIDER=openai
# Choose: 'openai' or 'huggingface'

# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Hugging Face API Key (if using Hugging Face)
HF_API_KEY=hf_your-huggingface-api-key-here
